<div class="border-bottom mb-2"><h1>My tasks</h1></div>

<div class="mb-2">
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="d-flex list-group-item">
        <div>
          <% if task.completed == true %>
            <i class="fa-solid fa-square-check pe-1 align-self-center"></i>
          <% elsif task.completed == false %>
            <i class="fa-regular fa-square pe-1 align-self-center"></i>
          <% end %>
          <%= link_to(task.title, task_path(task), class: "plain-link")%>
          </div>
        <div class="ps-2">
          <%= link_to(task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "plain-link") do %>
            &#x2022; <i class="fa-solid fa-trash align-self-center"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div class="d-flex">
  <div class="align-self-center pe-1"><i class="fa-solid fa-plus"></i></div>
  <%= link_to("Add a new task", new_task_path, class: "plain-link") %>
</div>
